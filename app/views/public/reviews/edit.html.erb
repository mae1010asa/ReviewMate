<div class='container py-5'>
  <div class='row justify-content-center'>
      <div class='col-md-10 col-lg-8'>
        <div class='row'>
          <div class="description-scroll col-6 px-3">  
            <h1><%= @item.title %></h2>
            <p class="description-scroll p-3">
              <%= @item.body %>
            </p>
          </div>
        </div>
        <div class="card bg-light border-0">
          <div class="comment-form px-3">
            <h4>レビュー内容を変更する</h4>
            <%= render "public/shared/star", review: @review %>
              <%= form_with(model: [@item, @review], local: true) do |f| %>
                <div class="form-group">
                  <%= f.label :タイトル %>
                  <%= f.text_field :title, class: 'form-control review_title' %>
                </div>
                <div class="form-group">
                  <%= f.label :内容 %>
                  <%= f.text_area :body, class: 'form-control review_body' %>
                </div>
                <div class="form-group">
                  <%= f.submit '送信', class: "btn btn-primary px-4" %>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
