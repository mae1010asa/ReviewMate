<div class='container py-5'>
  <div class='row'>
      <div class='col-md-12'>
        <div class="comment-form px-3">
          <h4>登録情報を変更する</h4>
            <%= form_with(model: [@user], local: false) do |f| %>
              <div class="form-group">
                <%= f.label :名前 %>
                <%= f.text_field :name, class: 'form-control user_name' %>
              </div>
              <div class="form-group">
                <%= f.label :メールアドレス %>
                <%= f.text_area :email, class: 'form-control user_email' %>
              </div>
              <div class="form-group">
                <%= f.submit '送信' %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
