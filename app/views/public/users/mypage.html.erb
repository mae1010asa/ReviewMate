<div class='container py-2'>
  <div class='row justify-content-center'>
    <div class='col-md-10 col-lg-8'>
      <div class='row'>
        ログイン中のユーザー：<%= link_to @user.name, user_path(@user) %>
      </div>
      <%= image_tag @user.get_user_image, size:'100x100' %>

      <div class="search-form mt-5 p-4 bg-light rounded shadow-sm">
        <h5 class="mb-3"><i class="fas fa-search"></i> ユーザーを探す</h5>
        <%= search_form_for @q, url: users_path, class: "input-group" do |f| %>
          <%# name_cont: 名前が「含む(contains)」検索 %>
          <%= f.search_field :name_cont, class: "form-control", placeholder: "ユーザー名を入力して検索" %>
          <div class="input-group-append">
            <%= f.submit "検索", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="reviews-section">
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
          <h4 class="my-3">
            <i class="fas fa-list-ul"></i> タイムライン
          </h4>
        </div>

        <% @reviews.each do |review| %>
          <div class="card mb-3 shadow-sm hover-card">
            <div class="card-body">
              <div class="px-3 py-2">
                <div class="d-flex justify-content-between">
                  <h5>
                    <%= link_to review.title, item_review_path(review.item, review) %><br>
                    <%= render "public/shared/star", review: review %>
                  </h5>
                  <small class="text-muted"><%= review.created_at.strftime('%Y/%m/%d') %></small>
                </div>

                <div class="mb-2">
                  <small class="text-muted">商品：</small>
                  <strong><%= link_to review.item.title, item_path(review.item), class: "text-dark" %></strong>
                </div>

                <strong>
                  <i class="fas fa-user text-primary"></i>
                  <%= link_to review.user.name, user_path(review.user) %>
                </strong><br>

                <div class="mb-2">
                  <i class="fas fa-tags text-primary"></i>
                  <% review.tag_list.each do |tag| %>
                    <span class="badge badge-info"><%= tag %></span>
                  <% end %>
                </div>
                
                <p class="card-text text-secondary mb-0">
                  <%= truncate(review.body, length: 100) %>
                </p>
                
                <% if review.body.length > 100 %>
                  <div class="text-right mt-1">
                    <%= link_to "詳細を見る", item_review_path(review.item, review), class: "small" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>