<div class='container py-5'>
  <div class='row'>
      <div class='col-md-12'>
        <div class="comment-form px-3">
          <h4>登録情報を変更する</h4>
            <%= form_with(model: [@user], local: true) do |f| %>
              <div class="form-group">
                <%= f.label :名前 %>
                <%= f.text_field :name, class: 'form-control user_name' %>
              </div>
              <div class="form-group">
                <%= f.label :メールアドレス %>
                <%= f.text_area :email, class: 'form-control user_email' %>
              </div>
              <div class="form-group">
                <%= f.label :user_image, "プロフィール画像" %>
                <%= f.file_field :user_image, class: "form-control-file" %>
              </div>
              <div class="form-group">
                <%= f.submit '送信' %>
              </div>
            <% end %>
            <div class="p-3">
              <% if @user == current_user %>
              <%= link_to "退会する", user_path, method: :delete, class: "btn btn-danger", data: {confirm:"本当に退会しますか？"} %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
