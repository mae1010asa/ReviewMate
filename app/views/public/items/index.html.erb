<div class='container py-5'>
  <div class='col-md-12'>
      <div>
        <div class="row pb-3">
          <div class="col-md-2">
            <h4>商品一覧</h4>
          </div>
          <div class="col-md-10 search_form pe-3">
            <%= search_form_for @q, url: items_path, class:"row justify-content-end" do |f| %>
              <div class="col-md-4 p-0">
                <%= f.search_field :title_cont, class:"form-control", placeholder: "商品名" %>
              </div>
              <div class="col-md-1">
                <button class="btn btn-outline-success" type="submit">
                  <i class="fa-solid fa-magnifying-glass"></i>
                </button>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 mb-3 d-flex justify-content-end">
            <div class="btn-group">
              <%= link_to '新着順', items_path(params.permit(:q, :sort).merge(sort: 'latest')), class: "btn btn-outline-secondary #{'active' if params[:sort] == 'latest' || params[:sort].nil?}" %>
              <%= link_to '評価の高い順', items_path(params.permit(:q, :sort).merge(sort: 'rating')), class: "btn btn-outline-secondary #{'active' if params[:sort] == 'rating'}" %>
              <%= link_to 'レビュー件数が多い順', items_path(params.permit(:q, :sort).merge(sort: 'count')), class: "btn btn-outline-secondary #{'active' if params[:sort] == 'count'}" %>
            </div>
          </div>
        </div>
        <div class="row">
          <% @items.each do |item| %>
            <div class="col-md-6 mb-4">
              <div class="card">
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_item_image, class: 'card-img-top', style: "height: 200px; width: 100%; object-fit: cover;" %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to item.title, item_path(item.id) %>
                  </h5>
                  <p class="card-text pt-1">
                    <%= "平均評価：#{item.avg_score}" %>
                  </p>
                  <p class="card-text">
                    <%= "レビュー件数：#{item.reviews.count}件" %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>