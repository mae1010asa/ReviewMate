<div class='container py-5'>
  <div class='row justify-content-center'>
    <div class='col-md-10 col-lg-8'>
      <div class="card shadow-sm mb-5">
        <div class="row no-gutters">
          <div class="col-md-4 d-flex align-items-center justify-content-center bg-light">
            <div>
              <%= image_tag @item.get_item_image, class: "img-fluid rounded", style: "max-height: 250px; object-fit: contain;" %>
            </div>
          </div>
          
          <div class="col-md-8">
            <div class="card-body h-100 d-flex flex-column">
              <h2 class="card-title font-weight-bold"><%= @item.title %></h2>
            </div>
          </div>
        </div>
      </div>
      <div class="comment-form px-3">
        <h4>レビューを投稿する</h4>
          <%= form_with(model: [@item, @review], local: true) do |f| %>
            <div class="form-group">
              <%= f.label :タイトル %>
              <%= f.text_field :title, class: 'form-control review_title' %>
            </div>
            <div class="form-group">
              <%= f.label :内容 %>
              <%= f.text_area :body, class: 'form-control review_body' %>
            </div>
            <div id="post_raty" 
                data-star-on="<%= asset_path('star-on.png') %>" 
                data-star-off="<%= asset_path('star-off.png') %>" 
                data-score-name="review[star]">
            </div>
            <div class="form-group">
              <%= f.label :tag_list, "タグ (カンマ区切りで入力)" %>
              <%= f.text_field :tag_list, value: @review.tag_list.join(','), class: "form-control", placeholder: "例: コスパ良し, 初心者向け" %>
            </div>
            <div class="form-group pt-3">
              <%= f.submit '送信', class: "btn btn-primary px-4" %>
            </div>
          <% end %>
          <%= link_to "商品画面へ戻る", item_path(@item) %>
      </div>
    </div>
  </div>
</div>