<div class='container py-2'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='row'>
        ログイン中のユーザー：<%= link_to @user.name, user_path(@user) %>
      </div>
      <%= image_tag @user.get_user_image, size:'100x100' %>

      <h4 class='my-5'>投稿したレビュー</h4>
      <table class='table table-hover my-5'>
        <tbody>
          <% @user.reviews.each do |review| %>
            <tr>
              <td>
                <div class="px-3 py-2">
                  <h5>
                    <%= link_to review.title, item_review_path(@user, review) %><br>
                    <%= render "public/shared/star", review: review %>
                  </h5>
                  <strong><%= review.item.title %></strong><br>
                  <p class="mt-2 mb-0">
                    内容：<%= review.body %>
                  </p>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>