<div class='container py-5'>
  <div class='col-md-12'>
      <div>
        <div class="row">
          <h4>商品一覧</h4>
        </div>
        <div class="row">
          <% @items.each do |item| %>
            <div class="col-md-5 mb-4">
              <div class="card">
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_item_image, class: 'card-img-top', size: '200x130' %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to item.title, item_path(item.id) %>
                  </h5>
                  <p class="card-text">
                    <%= "レビュー件数：#{item.reviews.count}件" %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>