<div class='container py-5'>
  <div class='row'>
      <div class='col-md-12'>
        <div class='row'>
        <div class="comment-form px-3">
          <h4>商品を追加する</h4>
            <%= form_with(model: [@item], local: false) do |f| %>
              <div class="form-group">
                <%= f.label :商品名 %>
                <%= f.text_field :title, class: 'form-control item_title' %>
              </div>
              <div class="form-group">
                <%= f.label :内容（任意） %>
                <%= f.text_area :body, class: 'form-control item_body' %>
              </div>
              <div class="form-group">
                <%= f.label :item_image, "商品画像（任意）" %>
                <%= f.file_field :item_image, class: "form-control-file" %>
              </div>
              <div class="form-group">
                <%= f.submit '送信' %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>