<div class='container py-5'>
  <div class='row'>
      <div class='col-md-12'>
        <div class='row'>
          <div class="description-scroll col-6 px-3">  
            <h2><%= @item.title %></h2>
            <%= image_tag @item.get_item_image, size:'200x130' %>
            <p class="description-scroll p-3">
              <%= @item.body %>
            </p>
          </div>
        </div>
        <div class="comment-form px-3">
          <h4>レビューを投稿する</h4>
            <%= form_with(model: [@item, @review], local: true) do |f| %>
              <div class="form-group">
                <%= f.label :タイトル %>
                <%= f.text_field :title, class: 'form-control review_title' %>
              </div>
              <div class="form-group">
                <%= f.label :内容 %>
                <%= f.text_area :body, class: 'form-control review_body' %>
              </div>
              <div id="post_raty"></div>
                <script>
                  let elem = document.querySelector('#post_raty');
                  let opt = {  
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    scoreName: 'review[star]',
                  };
                  raty(elem,opt);
                </script>
              <div class="form-group">
                <%= f.label :tag_list, "タグ (カンマ区切りで入力)" %>
                <%= f.text_field :tag_list, value: @review.tag_list.join(','), class: "form-control", placeholder: "例: コスパ良し, 初心者向け" %>
              </div>
              <div class="form-group pt-3">
                <%= f.submit '送信' %>
              </div>
            <% end %>
            <%= link_to "商品画面へ戻る", item_path(@item) %>
        </div>
      </div>
    </div>
  </div>
</div>