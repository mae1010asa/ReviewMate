<div class='container py-5'>
  <div class='row'>
    <div class='col-9 mx-auto'>
      <div class="row mb-3 align-items-center">
        <div class="col-md-4">
          <h4>ユーザー</h4>
        </div>
      </div>

      <table class="table table-hover">
        <thead> <tr>
            <th style="width: 10%;">ユーザーID</th>
            <th style="width: 30%;">プロフィール画像</th>
            <th style="width: 30%;">アカウント名</th>
            <th style="width: 20%;">emailアドレス</th>
            <th style="width: 10%;">レビュー数</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= image_tag user.get_user_image, size:'100x100' %></td>
              <td><%= link_to user.name, admin_user_path(user.id) %></td>
              <td><%= user.email %></td>
              <td><%= user.reviews.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>