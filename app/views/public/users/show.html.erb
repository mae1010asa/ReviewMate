<div class='container py-5'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='row'>
        <div class="description-scroll col-3 px-3">  
          <%= image_tag @user.get_user_image, size:'200x200' %>
        </div>
        <div class="description-scroll col-6 px-3">  
          <h2><%= @user.name %></h2>
          
          <h5 class="p-3"><%= link_to @user.followings.count, followings_user_path(@user) %> フォロー</h5>
          <h5 class="px-3"><%= link_to @user.followers.count, followers_user_path(@user) %> フォロワー</h5>
          <% if @user == current_user %>
            <p class="description-scroll p-3">
              メールアドレス：<%= @user.email %>
            </p>
          <% end %>
        </div>
      </div>
      <div class="p-3">
        <% if @user == current_user %>
          <%= link_to "編集する", edit_user_path, class: "btn btn-success" %>
        <% elsif current_user.following?(@user) %>
            <%= link_to "フォロー外す", user_relationship_path(@user),
            method: :delete, class: "btn btn-primary" %>   
          <% else %>
            <%= link_to "フォローする", user_relationship_path(@user),
            method: :post, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>